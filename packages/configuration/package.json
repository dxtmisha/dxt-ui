{
  "name": "@dxtmisha/configuration",
  "private": false,
  "version": "0.3.1",
  "type": "module",
  "description": "Shared configuration files for DXT UI - Vite configs and TypeScript configs for building UI components",
  "keywords": [
    "vite",
    "typescript",
    "config",
    "tsconfig",
    "ui",
    "dxt",
    "build",
    "configuration"
  ],
  "author": "dxtmisha@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/dxtmisha/dxt-ui/tree/main/packages/configuration",
  "repository": {
    "type": "git",
    "url": "https://github.com/dxtmisha/dxt-ui.git",
    "directory": "packages/configuration"
  },
  "bugs": {
    "url": "https://github.com/dxtmisha/dxt-ui/issues"
  },
  "files": [
    "viteconfig/",
    "tsconfig/",
    "README.md",
    "package.json",
    "LICENSE"
  ],
  "exports": {
    "./viteBasic": {
      "types": "./viteconfig/viteBasic.config.d.ts",
      "default": "./viteconfig/viteBasic.config.js"
    },
    "./viteBasicFunction": {
      "types": "./viteconfig/viteBasicFunction.config.d.ts",
      "default": "./viteconfig/viteBasicFunction.config.js"
    },
    "./viteComponentOnly": {
      "types": "./viteconfig/viteComponentOnly.config.d.ts",
      "default": "./viteconfig/viteComponentOnly.config.js"
    },
    "./viteFlags": {
      "types": "./viteconfig/viteFlags.config.d.ts",
      "default": "./viteconfig/viteFlags.config.js"
    },
    "./viteMdx": {
      "types": "./viteconfig/viteMdx.config.d.ts",
      "default": "./viteconfig/viteMdx.config.js"
    },
    "./tsconfig/*": "./tsconfig/*"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "vite": ">=4.0.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {},
  "devDependencies": {},
  "sideEffects": false
}
