{
  "main": "{d.window}",
  "padding": "{grid.paddingX}",
  "width": {
    "sm": "{ref.spacing.px} * 512",
    "md": "{ref.spacing.px} * 768",
    "lg": "{ref.spacing.px} * 1024",
    "_default": "md"
  },
  "height": {
    "sm": "{ref.spacing.px} * 256",
    "md": "{ref.spacing.px} * 384",
    "lg": "{ref.spacing.px} * 512"
  },
  "background-color": "{sys.palette.scrim}",
  "background-opacity": "{sys.opacity.scrim}",
  "z-index": "{sys.index.xl}",
  "#teleport": {
    "z-index": "{sys.index.xl}"
  },
  "#body": {
    "background": "{sys.background.4}",
    "border-radius": "{sys.rounded.xl}",
    "box-shadow": "{sys.shadow.xl}"
  },
  "media|lg": {
    "padding": "{sys.spacing.xl}"
  },
  "~adaptive": {
    "~menu": {
      "#teleport": {
        "z-index": "{sys.index.lg}"
      },
      "#body": {
        "background": "{sys.background.3}",
        "border-radius": "{sys.rounded.lg}",
        "box-shadow": "{sys.shadow.lg}"
      }
    },
    "~actionSheetBottom": {
      "#body": {
        "max-height": "calc(100dvh - {ref.spacing.16})",
        "border-top-left-radius": "{sys.rounded.xl}",
        "border-top-right-radius": "{sys.rounded.xl}"
      }
    },
    "~actionSheet": {
      "media|md": {
        "link|actionSheetRight": "{??adaptive.actionSheetRight}"
      },
      "media-max|md": {
        "link|actionSheetBottom": "{??adaptive.actionSheetBottom}"
      }
    },
    "~actionSheetToModal": {
      "media-max|md": {
        "link|actionSheetBottom": "{??adaptive.actionSheetBottom}"
      }
    },
    "group|autoStatic": {
      "link|static": "{??adaptive.static}",
      "_type": "media-group"
    }
  },
  "~imageSize": {
    "sm": {
      "imageSizeValue": "{ref.spacing.px} * 128"
    },
    "md": {
      "imageSizeValue": "{ref.spacing.px} * 256"
    },
    "lg": {
      "imageSizeValue": "{ref.spacing.px} * 384"
    },
    "quarter": {
      "imageSizeValue": "25%"
    },
    "half": {
      "imageSizeValue": "50%"
    },
    "_default": "md"
  }
}
