{
  "main": "{d.bars}",
  "gap": "{sys.spacing.xs}",
  "padding-x": "{grid.paddingX}",
  "padding-Y": "{grid.paddingY}",
  "background-color": "{sys.palette.surface}",
  "background-opacity": "{sys.opacity.primary.high}",
  "backdrop-filter": "{sys.blur.md}",
  "#label": {
    "padding-top": "{ref.spacing.2px}",
    "link|font": "{font.titleLarge}"
  },
  "#description": {
    "link|font": "{font.bodyMedium}",
    "color-opacity": "{sys.opacity.surface.medium}",
    "&:first-child": {
      "padding-top": "{ref.spacing.6px}"
    }
  },
  "~action": {
    "color": "{sys.palette.inverseOnSurface}",
    "background-color": "{sys.palette.inverseSurface}"
  }
}
