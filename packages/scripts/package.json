{
  "name": "@dxtmisha/scripts",
  "private": false,
  "version": "0.7.0",
  "type": "module",
  "description": "Development scripts and CLI tools for DXT UI projects - automated component generation, library building and project management tools",
  "keywords": [
    "scripts",
    "cli",
    "development",
    "component-generator",
    "ui-library",
    "dxt-ui",
    "automation",
    "build-tools",
    "typescript",
    "vue"
  ],
  "author": "dxtmisha@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/dxtmisha/dxt-ui/tree/main/packages/scripts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dxtmisha/dxt-ui.git",
    "directory": "packages/scripts"
  },
  "bugs": {
    "url": "https://github.com/dxtmisha/dxt-ui/issues"
  },
  "scripts": {
    "build": "vue-tsc -b && vite build",
    "library": "dxt-library"
  },
  "files": [
    "bin/",
    "src/",
    "README.md",
    "package.json",
    "LICENSE"
  ],
  "main": "./dist/library.js",
  "module": "./dist/library.js",
  "types": "./dist/library.d.ts",
  "bin": {
    "dxt-ai-doc": "bin/ai-doc.js",
    "dxt-build-functional": "bin/build-functional.js",
    "dxt-component": "bin/design-component.js",
    "dxt-component-wiki": "bin/design-component-wiki.js",
    "dxt-constructor": "bin/design-constructor.js",
    "dxt-flags": "bin/design-flags.js",
    "dxt-library": "bin/design-library.js",
    "dxt-package": "bin/design-package.js",
    "dxt-types": "bin/design-types.js",
    "dxt-ui": "bin/design-ui.js"
  },
  "exports": {
    ".": {
      "import": "./dist/library.js",
      "types": "./dist/library.d.ts"
    },
    "./ai": {
      "import": "./dist/library-ai.js",
      "types": "./dist/library-ai.d.ts"
    },
    "./plugin": {
      "import": "./dist/library-plugin.js",
      "types": "./dist/library-plugin.d.ts"
    },
    "./config": {
      "import": "./dist/config.js",
      "types": "./dist/config.d.ts"
    },
    "./properties.json": "./src/media/properties.json"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "@dxtmisha/configuration": "*",
    "@dxtmisha/functional": "*",
    "@dxtmisha/styles": "*",
    "@dxtmisha/wiki": "*",
    "typescript": "*",
    "vue": "*"
  },
  "dependencies": {}
}
